@startuml
'https://plantuml.com/sequence-diagram

!include ../../style.puml

participant LogJob #grey

box Logic LOGIC_COLOR_T1
participant ":ListCommandParser" as ListCommandParser LOGIC_COLOR
participant "listCommand:ListCommand" as ListCommand LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ApplicationManager MODEL_COLOR
end box
box Ui UI_COLOR_T1
participant UI UI_COLOR
end box

LogJob -> UI: readInput()
activate LogJob
activate UI
UI --> LogJob: input: string
deactivate

create ListCommandParser
LogJob -> ListCommandParser: parse(input)
activate ListCommandParser


create ListCommand
ListCommandParser -> ListCommand
activate ListCommand
ListCommand --> ListCommandParser
deactivate

ListCommandParser --> LogJob: listCommand
deactivate

LogJob -> ListCommand: execute(command)
activate ListCommand
ListCommand -> ApplicationManager: listApplications()

activate ApplicationManager
ApplicationManager -> UI: printApplications()

activate UI
UI --> ApplicationManager
deactivate
ApplicationManager --> ListCommand
ListCommand --> LogJob
deactivate
destroy ListCommand
destroy ListCommandParser

@enduml