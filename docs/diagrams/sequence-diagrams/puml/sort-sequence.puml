@startuml
'https://plantuml.com/sequence-diagram

!include ../../style.puml

participant LogJob #grey

box Logic LOGIC_COLOR_T1
participant ":SortCommandParser" as SortCommandParser LOGIC_COLOR
participant "sortCommand:SortCommand" as SortCommand LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ApplicationManager MODEL_COLOR
end box
box Ui UI_COLOR_T1
participant UI UI_COLOR
end box

LogJob -> UI: readInput()
activate LogJob
activate UI
UI --> LogJob: input: string
deactivate

create SortCommandParser
LogJob -> SortCommandParser: parse(input)
activate SortCommandParser
create SortCommand
SortCommandParser -> SortCommand
activate SortCommand
SortCommand --> SortCommandParser
deactivate

SortCommandParser --> LogJob: sortCommand
deactivate

LogJob -> SortCommand: execute(command)
activate SortCommand
SortCommand -> ApplicationManager: sortApplications()

activate ApplicationManager
ApplicationManager -> UI: printApplications()

activate UI
UI --> ApplicationManager
deactivate
ApplicationManager --> SortCommand
SortCommand --> LogJob
deactivate
destroy SortCommand
destroy SortCommandParser

@enduml